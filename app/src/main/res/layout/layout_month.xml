<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMonth"
        android:text="NOVEMBER 2016"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLunarMonth"
        android:text="OCTOBER 2016"
        android:layout_below="@id/textViewMonth"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textViewMonth"
        android:text="&#9668;"
        android:id="@+id/btnPreviousMonth"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="30sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textViewMonth"
        android:text="&#9658;"
        android:id="@+id/btnNextMonth"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="30sp"
        />
</RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableMonth"
        android:stretchColumns="*">
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="CN"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_red_dark"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

            <TextView
                android:text="Th 2"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:text="Th 3"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:text="Th 4"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:text="Th 5"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:text="Th 6"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            <TextView
                android:text="Th 7"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue" />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/textViewSolarToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/textViewLunarToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="normal|bold" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</LinearLayout>